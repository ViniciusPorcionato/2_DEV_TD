@model Equipe

@{
    ViewData["Title"] = "Equipe";
}

<link rel="stylesheet" href="~/css/equipes.css">

@if (ViewBag.UserName == null)
{
    <a class="nav-link text-dark" asp-area="" asp-controller="Login" asp-action="Index">Login</a>
}
else
{
    <!-- MAIN -->
    <main>

        <section class="container-grid cadastro-equipes">
            
            
            <form method="post" action="@Url.Action("Cadastrar")" enctype="multipart/form-data" class="frm-cad-equipe" >
                <div class="cadequipe-titulo">
                    <h1>Cadastro de Equipes</h1>
                    <hr>
                </div>

                @* <input class="campo-entrada" type="number" id="idEquipe" placeholder="Digite o Id da sua equipe:"> *@
                <input type="text" name="Nome" required class="campo-entrada" placeholder="Digite o nome da sua equipe:">
                <label class="foto" for="foto-file">
                    Nenuma imagem selecionada...
                    <input type="File" name="Imagem" id="foto-file">
                </label>
                
                <button type="submit">Cadastro</button>
                
                
                
                <!-- <select class="equipeid" id="equipeid">
                    <option value="">Selecione uma Equipe</option>
                    <option value="x">Equipe X</option>
                    <option value="y">Equipe Y</option>
                </select> -->
            </form>

            <!-- TABELA CADASTRO DE EQUIPES -->

            <table class="table table-striped table-responsive">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nome</th>
                        <th>Foto</th>
                        <th>Ações</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (Equipe equipe in ViewBag.Equipe)
            {
                    <tr>
                        <td>@equipe.IdEquipe</td>
                        <td>@equipe.Nome</td>
                        <td>
                        <img src="/img/Equipes/@equipe.Imagem" alt="Imagem da @equipe.Nome" width="50px">
                        </td>
                        <td>
                        <a class="nav-link text-dark" asp-area="" asp-controller="Equipe" asp-action="Excluir" asp-route-id="@equipe.IdEquipe">
                        <img class="yellow-trash" src="~/assets/trash.png" alt="">
                        </a>
                        <a asp-area="" asp-controller="Equipe" asp-action="Editar" asp-route-id="@equipe.IdEquipe"><img class="yellow-trash" src="~/assets/icon-pencil-edit.svg" alt=""></a>
                        </td>
                    </tr>
            }
                </tbody>
            </table>
        </section>
    </main>
}

